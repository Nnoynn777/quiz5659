<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="#72E195F4"
    android:layout_height="match_parent"
    android:padding="3dp"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="728dp"
        android:background="@drawable/fonjava"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="32sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#A0FFFFFF"/>

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Напишите своё имя"
            android:textSize="21sp"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="60dp"
            android:textColorHint="@color/black"/>

        <EditText
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="21sp"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="25dp"
            android:textColorHint="@color/black"/>
        <EditText
            android:id="@+id/userPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Напишите свой номер телефона"
            android:textSize="21sp"
            android:padding="10dp"
            android:inputType="number"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="25dp"
            android:textColorHint="@color/black"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Напишите свой пароль"
            android:textSize="21sp"
            android:padding="10dp"
            android:inputType="textPassword"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="25dp"
            android:textColorHint="@color/black"/>

        <Button
            android:id="@+id/регистрация"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Регистрация"
            android:textSize="22sp"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Уже есть аккаунт? "
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/Войтиздесь"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Войти здесь"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="invisible"/>

    </LinearLayout>

</RelativeLayout>